{
  "name": "arroyo-erp-models",
  "version": "0.1.0",
  "description": "Models for arroyo erp",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "publish-patch": "np patch",
    "publish-minor": "np minor",
    "publish-major": "np major",
    "lint": "eslint **/*.js --ignore-pattern node_modules/"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "lint --fix",
      "test"
    ]
  },
  "files": [
    "models",
    "config",
    "LICENSE",
    "README.md",
    "mongoose-connect.js"
  ],
  "author": "Eduardo Parra Mazuecos",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^4.0.1",
    "bluebird": "^3.7.2",
    "mongodb-memory-server": "^6.3.1",
    "mongoose": "^5.9.2",
    "mongoose-connect": "0.0.3",
    "np": "^6.2.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.1",
    "jest": "^25.1.0",
    "jest-circus": "^25.1.0",
    "pre-commit": "^1.2.2"
  },
  "jest": {
    "bail": true,
    "testEnvironment": "<rootDir>/test/mongo-test-environment",
    "setupFilesAfterEnv": [
      "<rootDir>/test/bootstrap-jest.js"
    ],
    "coverageReporters": [
      "json",
      "text-summary",
      "lcov",
      "clover"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/models/**"
    ],
    "coveragePathIgnorePatterns": [],
    "testRunner": "jest-circus/runner"
  },
  "keywords": [
    "database",
    "mongodb"
  ]
}
