{
  "name": "arroyo-erp-models",
  "version": "0.9.0",
  "description": "Models for arroyo erp",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "lint": "eslint **/*.js --ignore-pattern node_modules/"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "lint --fix",
      "test"
    ]
  },
  "files": [
    "models",
    "config",
    "LICENSE",
    "README.md",
    "mongoose-connect.js"
  ],
  "author": "Eduardo Parra Mazuecos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soker90/arroyo-erp-models.git"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "bluebird": "^3.7.2",
    "mongodb-memory-server": "^6.6.6",
    "mongoose": "^5.10.2",
    "mongoose-connect": "0.0.3"
  },
  "devDependencies": {
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "jest": "^26.2.2",
    "jest-circus": "^26.2.2",
    "jest-environment-node": "^26.1.0",
    "pre-commit": "^1.2.2"
  },
  "jest": {
    "bail": true,
    "testEnvironment": "<rootDir>/test/mongo-test-environment",
    "setupFilesAfterEnv": [
      "<rootDir>/test/bootstrap-jest.js"
    ],
    "coverageReporters": [
      "json",
      "text-summary",
      "lcov",
      "clover"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/models/**"
    ],
    "coveragePathIgnorePatterns": [],
    "testRunner": "jest-circus/runner"
  },
  "keywords": [
    "database",
    "mongodb"
  ]
}
